# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.{css,scss}]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.{njk,hbs}]
insert_final_newline = false
indent_style = space
indent_size = 2

[*.txt]
indent_style = space
indent_size = 4
continuation_indent_size = 0

[*.md]
trim_trailing_whitespace = false
